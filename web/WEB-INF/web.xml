    </servlet>
    <servlet-mapping>
        <servlet-name>PromotionsPageServlet</servlet-name>
        <url-pattern>/PromotionsPageServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>/MainPageServlet</welcome-file>
    </welcome-file-list>
